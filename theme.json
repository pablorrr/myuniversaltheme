{
  "$schema": "https:\/\/schemas.wp.org\/trunk\/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "custom": true,
      "customGradient": true,
      "link": true,
      "palette": [
        {
          "name": "primary",
          "slug": "primary",
          "color": "#8f2d2d"
        },
        {
          "name": "secondary",
          "slug": "secondary",
          "color": "#443c3c"
        }
      ]
    },
    "typography": {
      "dropCap": false,
      "fontFamilies": [
        {
          "name": "Serif (Times New Roman, Noto Serif)",
          "slug": "serif-times-new-roman-noto-serif",
          "fontFamily": "\"Times New Roman\",\"New York\",Times,\"Noto Serif\",serif"
        },
        {
          "name": "System (Roboto, Segoe UI, Ubuntu)",
          "slug": "system",
          "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
        },
        {
          "name": "Monospace (Consolas, SF Mono, Roboto Mono)",
          "slug": "monospace",
          "fontFamily": "Consolas,Menlo,Monaco,\"SF Mono\",\"DejaVu Sans Mono\",\"Roboto Mono\",\"Courier New\",Courier,monospace"
        },
        {
          "name": "Gasoek One",
          "slug": "gasoekone",
          "fontFamily": "GasoekOne",
          "fontFace": [
            {
              "fontFamily": "GasoekOne",
              "fontWeight": "500",
              "fontStyle": "normal",
              "src": [
                "file:./inc/assets/fonts/GasoekOne-Regular.ttf"
              ]
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "slug": "extra-small",
          "size": "1rem",
          "name": "Extra small"
        },
        {
          "slug": "small",
          "size": "1.125rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "1.25rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "1.5rem",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "2rem",
          "name": "XL"
        },
        {
          "slug": "xx-large",
          "size": "clamp(2.5rem, calc(1rem + 2vw), 2.75rem)",
          "name": "XXL"
        },
        {
          "slug": "xxx-large",
          "size": "clamp(2.75rem, calc(1rem + 3vw), 3.75rem)",
          "name": "XXXL"
        },
        {
          "slug": "xxxx-large",
          "size": "clamp(2.75rem, calc(1rem + 4vw), 4.25rem)",
          "name": "XXXXL"
        },
        {
          "slug": "xxxxx-large",
          "size": "clamp(2.75rem, calc(1rem + 6vw), 6rem)",
          "name": "XXXXXL"
        }
      ]
    },
    "spacing": [
      {
        "units": [
          "px",
          "em",
          "rem",
          "vh",
          "vw"
        ]
      }
    ],
    "layout": {
      "contentSize": "840px",
      "wideSize": "1100px"
    }
  },
  "styles": {
    "blocks": {
      "core/post-content": {
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--primary)"
            }
          }
        }
      },
      "core/post-title": {
        "spacing": {
          "margin": {
            "bottom": "1.25rem",
            "top": "1.25rem"
          }
        },
        "typography": {
          "fontWeight": "400"
        },
        "elements": {
          "link": {
            ":hover": {
              "typography": {
                "textDecoration": "underline"
              }
            },
            ":focus": {
              "typography": {
                "textDecoration": "underline dashed"
              }
            },
            ":active": {
              "color": {
                "text": "var(--wp--preset--color--secondary)"
              },
              "typography": {
                "textDecoration": "none"
              }
            },
            "typography": {
              "textDecoration": "none"
            }
          }
        }
      },
      "core/site-title": {
        "elements": {
          "link": {
            ":hover": {
              "typography": {
                "textDecoration": "underline"
              }
            },
            ":focus": {
              "typography": {
                "textDecoration": "underline dashed"
              }
            },
            ":active": {
              "color": {
                "text": "var(--wp--preset--color--secondary)"
              },
              "typography": {
                "textDecoration": "none"
              }
            },
            "typography": {
              "textDecoration": "none"
            }
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "normal",
          "lineHeight": "1.4"
        }
      }
    },
    "color": {
      "text": "var(--wp--preset--color--secondary)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontSize": "2.125rem",
          "lineHeight": "1.2"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "typography": {
            "textDecoration": "none"
          }
        },
        ":focus": {
          "typography": {
            "textDecoration": "underline dashed"
          }
        },
        ":active": {
          "color": {
            "text": "var(--wp--preset--color--secondary)"
          },
          "typography": {
            "textDecoration": "none"
          }
        },
        "typography": {
          "textDecoration": "underline"
        }
      }
    },
    "spacing": {
      "blockGap": "1.5rem",
      "padding": {
        "top": "var(--wp--preset--spacing--20)",
        "right": "var(--wp--preset--spacing--10)",
        "bottom": "var(--wp--preset--spacing--10)",
        "left": "var(--wp--preset--spacing--10)"
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system-font)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.6"
    }
  }
}
